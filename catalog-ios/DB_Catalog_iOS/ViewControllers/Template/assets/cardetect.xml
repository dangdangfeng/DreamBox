<dbl xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <meta head_image="https://static.didialift.com/pinche/gift/resource/4f5opuqr4do-1594029757807-carDetect.gif" flash_image="https://static.didialift.com/pinche/gift/resource/7tsruqgi4h-1593854827460-%E5%8F%8C%E9%97%AA%403x.png" light_image="https://static.didialift.com/pinche/gift/resource/p9bi7hev7bo-1593854827460-%E5%85%89%E7%BA%BF%403x.png" car_image="https://static.didialift.com/pinche/gift/resource/80jsn0d9e48-1593854827459-%E8%BD%A6%403x.png" button_bg_url="https://static.didialift.com/pinche/gift/resource/6d8vmgbvfao-1594095244698-RectangleBack%403x.png" head_title="我是主标题" first_line="• 我是文案描述1" second_line="• 我是文案描述2" thrid_line="• 我是文案描述3" flash_text="打开双闪" light_text="光线充足" car_text="正对车辆" photo_button="开始拍摄" />
    <layout type="yoga" width="fill" height="fill">
        <image width="295dp" height="148dp" src="${head_image}" align-self="center" marginTop="16dp" scaleType='crop' />
        <!-- 描述 -->
        <text src="${head_title}" marginTop="32dp" marginLeft="40dp" marginRight="40dp" size="22dp" color="#212E33" style="bold" />
        <text src="${first_line}" marginLeft="40dp" marginTop="20dp" size="14dp" color="#4A555B" />
        <text src="${second_line}" marginLeft="40dp" marginTop="12dp" size="14dp" color="#4A555B" />
        <text src="${thrid_line}" marginLeft="40dp" marginTop="12dp" size="14dp" color="#4A555B" />
        <!-- icon -->
        <view backgroundColor="#666666" marginLeft="40dp" marginRight="40dp" height="1px" marginTop="30dp" />
        <layout type="yoga" flex-direction="row" justify-content="space-between" marginLeft="40dp" marginRight="48dp">
            <layout type="yoga" align-items="center">
                <image src="${flash_image}" width="43dp" height="43dp" marginTop="30dp" />
                <text src="${flash_text}" marginTop="6dp" size="14dp" color="#949FA5" gravity="center" />
            </layout>
            <layout type="yoga" align-items="center">
                <image src="${light_image}" width="43dp" height="43dp" marginTop="30dp" />
                <text src="${light_text}" marginTop="6dp" size="14dp" color="#949FA5" gravity="center" />
            </layout>
            <layout type="yoga" align-items="center">
                <image src="${car_image}" width="43dp" height="43dp" marginTop="30dp" />
                <text src="${car_text}" marginTop="6dp" size="14dp" color="#949FA5" gravity="center" />
            </layout>
        </layout>
        <!-- 占位组件 -->
        <view width="100%" flex-basis="10dp" flex-grow="1" />
        <!-- 底部按钮 -->
        <layout type="yoga" marginLeft="16dp" marginRight="16dp" marginBottom="16dp" height="50dp">
            <image src="${button_bg_url}" height="50dp" scaleType='fitXY'>
                <onClick>
                    <toast src="click button" />
                </onClick>
            </image>
            <text src="${photo_button}" positionType="absolute" gravity="center" width="100%" height="50dp" color="#FFFFFF" size="18dp" />
        </layout>
    </layout>
</dbl>
