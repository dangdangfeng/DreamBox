<dbl xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <layout type="yoga" width="fill" height="fill" align-items="center">
        <text width="200dp" height="50dp" marginTop="30dp" size="14dp" src="click me, 我是storage-write" backgroundColor="#cccccc" gravity="center">
            <onClick>
                <storage key="storage_test" write="i am storage_test" />
                <toast src="写入缓存" />
            </onClick>
        </text>
        <text width="200dp" height="50dp" marginTop="60dp" size="14dp" src="click me, 我是storage-readTo" backgroundColor="#cccccc" gravity="center">
            <onClick>
                <storage key="storage_test" readTo="value" />
                <toast src="读取缓存值" />
            </onClick>
        </text>
        <text marginTop="20dp" width="200dp" size="14dp" src="${value}" gravity="center" changeOn="value" />
    </layout>
</dbl>
